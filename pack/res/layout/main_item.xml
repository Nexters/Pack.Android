<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal" >
		<View
		    android:layout_gravity="center"
	        android:layout_width="fill_parent"
	        android:layout_height="85dp"
	        android:layout_marginTop="5dp"
	        android:layout_marginBottom="5dp"
	        android:layout_marginLeft="7dp"
	        android:layout_marginRight="7dp"
	        android:background="@color/white"
        />
		
	    <TextView
	        android:id="@+id/main_item_name_tv"
	        android:layout_marginTop="8dp"
	        android:layout_marginLeft="20dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="18sp"
	        android:textStyle="bold"
	        android:text="런던 쉼터" />
	    <TextView
	        android:id="@+id/main_item_address_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:maxWidth="200dp"
	        android:maxHeight="45dp"
	        android:layout_marginTop="32dp"
	        android:layout_marginLeft="20dp"        
	        android:text="러쉘 스퀘어 도보 5분"
	        android:textSize="15sp"
	        android:textStyle="normal" />
		
	    <ImageView
	        android:id="@+id/main_item_iv"
	        android:layout_width="78dp"
	        android:layout_height="78dp"
	        android:layout_gravity="right|center_vertical"
	        android:layout_marginRight="30dp"
	        android:src="@drawable/main_test_guest_img" />
	    <ImageView
	        android:id="@+id/main_item_decorator_iv"
	        android:layout_width="15dp"
	        android:layout_height="15dp"
	        android:layout_gravity="right|top"
	        android:layout_marginTop="7dp"
	        android:layout_marginRight="7dp"
	        android:src="@drawable/main_blue_contents" />
</FrameLayout>
